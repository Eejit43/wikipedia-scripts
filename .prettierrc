{
    "bracketSameLine": true,
    "endOfLine": "lf",
    "printWidth": 1000,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "none",
    "overrides": [
        {
            "files": ["*.css"],
            "options": { "singleQuote": false }
        },
        {
            "files": ["scripts.json"],
            "options": { "printWidth": 100 }
        }
    ],
    "plugins": ["prettier-plugin-css-order"]
}
